{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "separateMajorMinor": false,

  "packageRules": [
    {
      "groupName": "dev",
      "matchPaths": ["**/infra/dev/**"]
    },
    {
      "groupName": "prd",
      "matchPaths": ["**/infra/prd/**"]
    },
    {
      "groupName": "{{parentDir}}",
      "matchPaths": ["**/modules/**"]
    }
  ]
}
